<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:rb="clr-namespace:RoundedBoxView.Forms.Plugin.Abstractions;assembly=RoundedBoxView.Forms.Plugin.Abstractions"
    x:Class="EzWIC.Views.Layouts.HomeButton"
    HorizontalOptions="FillAndExpand">

    <rb:RoundedBoxView x:Name="btnBox" 
                       Color="#3299c6"
                       Margin="10,0"
                       AbsoluteLayout.LayoutBounds="0,20,1,150"
                       AbsoluteLayout.LayoutFlags="WidthProportional"
                       CornerRadius="{Binding BorderRadius}" />
    
    <Image x:Name="btnImage" 
           Source="{Binding Image}"
           WidthRequest="80"
           AbsoluteLayout.LayoutBounds="0.5,0,-1,-1"
           AbsoluteLayout.LayoutFlags="PositionProportional"/>

    <Label x:Name="btnLabel" 
           Text="{Binding Text}"
           TextColor="White"
           FontSize="30"
           AbsoluteLayout.LayoutBounds="0.5,90,-1,-1"
           AbsoluteLayout.LayoutFlags="XProportional" />
    
</AbsoluteLayout>
